<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.portal.musicmaster.MusicMaster"
    android:background="@drawable/backphoto" >

    <Button
        android:id="@+id/artist_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:textStyle="bold"
        android:onClick="viewArtists"
        android:layout_marginTop="64dp"
        android:text="@string/artist" />

    <Button
        android:id="@+id/track_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artist_button"
        android:textStyle="bold"
        android:layout_below="@+id/artist_button"
        android:onClick="viewtracks"
        android:layout_marginTop="29dp"
        android:text="@string/track" />

</RelativeLayout>
